---
import type { HTMLAttributes } from "astro/types";
import { Image, ImageComponentLocalImageProps, ImageComponentRemoteImageProps } from '@astrojs/image/components'

type Props = {
  src: string;
  alt: string;
}

const props = Astro.props;
---

<style>
  figure img {
    object-fit: cover;
    width: 100%;
    height: initial;
  }
</style>

<figure>
  <Image src={props.src} alt={props.alt} width={500} height={350} loading="lazy" />
  <figcaption>{props.alt}</figcaption>
</figure>
