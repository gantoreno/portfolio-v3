---
import type { HTMLAttributes } from "astro/types";

import BlurredImage from "./BlurredImage.astro";

type Props = HTMLAttributes<"img">;

const props = Astro.props;
---

<style>
  figure img {
    object-fit: cover;
    width: 100%;
    height: initial;
  }
</style>

<figure>
  <BlurredImage
    src={props.src}
    alt={props.alt}
    width="500px"
    height="400px"
    loading="lazy"
  />
  <figcaption>{props.alt}</figcaption>
</figure>
