---
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
---

<style>
  .blur {
    z-index: -2;
    width: 512px;
    height: 512px;
    background: var(--foreground);
    position: absolute;
    top: -256px;
    left: calc(50% - 256px);
    border-radius: 50%;
    filter: blur(calc(var(--blur-factor) * 8));
    opacity: 0.05;
  }
</style>

<Navbar />

<div class="blur"></div>

<Container>
  <slot />
</Container>

<Footer />
